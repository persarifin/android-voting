<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/imgpaslon"
                android:layout_marginTop="10dp"
                android:layout_below="@id/l"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/l"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#44AEAE">
                <TextView
                    android:drawableLeft="@drawable/ic_baseline_how_to_vote_24"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=" 0"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/autonum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_below="@id/l"
                android:id="@+id/ketua"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ketua :"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imgpaslon" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/ketua"
                android:layout_toEndOf="@id/imgpaslon" />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/imgpaslon"
                android:background="#C4C2C2" />

            <TextView
                android:id="@+id/wakil"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wakil :"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                android:layout_below="@id/view"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imgpaslon" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/wakil"
                android:layout_toEndOf="@id/imgpaslon" />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text2"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/imgpaslon"
                android:background="#C4C2C2" />
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/btndetail"
                android:layout_below="@id/view1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:gravity="center|right"
                android:paddingStart="5dp"
                android:background="@drawable/button"
                android:paddingEnd="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="Detail   "
                android:drawableRight="@drawable/ic_skip_white"
                android:drawableTint="#E15151"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/btnpilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:drawableRight="@drawable/ic_done_white"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center|right"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Pilih   "
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>